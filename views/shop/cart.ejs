<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="centered">
    <h1>Cart</h1>
    <hr>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price</th>
          <th>Quantity</th>
          <th>Total Price</th>
        </tr>
      </thead>
      <tbody>
        <% for (let product of products) { %>
        <tr>
          <td><%= product.productData.title  %></td>
          <td>€ <%= Number(product.productData.price).toFixed(2) %></td>
          <td><%= product.qty %></td>
          <td>€ <%= Number(product.productData.price*product.qty).toFixed(2) %></td>
        </tr>
        <% } %>
        <tr>
          <td></td>
          <td></td>
          <td>Total</td>
          <td>€ <%= Number(totalPrice).toFixed(2) %></td>
        </tr>
      </tbody>
    </table>
  </main>
  <%- include('../includes/end.ejs') %>