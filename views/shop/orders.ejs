<body>
  <%- include('../includes/navigation.ejs') %>
  <main class="centered">
    <% if(orders.length >0) { %>
    <ul>
      <% for (let order of orders) { %>
      <li>
        <h1># <%= order.id %></h1>
        <ul>
          <% for (let product of order.products) { %>
          <li><%= product.title  %> (<%= product.orderItem.quantity %>)</li>
          <% } %>
        </ul>
      </li>
      <% } %>
    </ul>
    <% } else { %>
    <h1>Under construction</h1>
    <% } %>
  </main>
  <%- include('../includes/end.ejs') %>